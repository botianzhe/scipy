#!/usr/bin/env bash

set -e

unset CFLAGS CXXFLAGS SHAREDFLAGS

export ATLAS="$SPKG_LOCAL"
export BLAS="$SPKG_LOCAL"
export LAPACK="$SPKG_LOCAL"
export LDFLAGS="-shared"

export FC=gfortran
export F77=gfortran
export F90=gfortran
export F95=gfortran


# Make sure umfpack is *not* picked up from Ubuntu:
UMFPACK="None"; export UMFPACK

cd src
python setup.py install
